{
  "name": "urvigo-server",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "node ace serve --watch",
    "build": "node ace build --production --ignore-ts-errors",
    "start": "node server.js",
    "build:stage": "npm cache clean --force && npm i && node ace build --production --ignore-ts-errors",
    "start:stage": "cd build && node ace migration:fresh --force && node ace db:seed  && npm ci --production && node server.js",
    "test": "node ace test",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write ."
  },
  "eslintConfig": {
    "extends": [
      "plugin:adonis/typescriptApp",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ]
    }
  },
  "eslintIgnore": [
    "build"
  ],
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  },
  "devDependencies": {
    "@japa/preset-adonis": "^1.2.0",
    "@japa/runner": "^2.5.1",
    "@types/proxy-addr": "^2.0.1",
    "@types/source-map-support": "^0.5.8",
    "@types/uuid": "^9.0.7",
    "adonis-preset-ts": "^2.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-adonis": "^2.1.1",
    "eslint-plugin-prettier": "^5.0.0",
    "pino-pretty": "^10.2.2",
    "prettier": "^3.2.5",
    "typescript": "~4.6",
    "youch": "^3.3.2",
    "youch-terminal": "^2.2.3"
  },
  "dependencies": {
    "@adonisjs/assembler": "^5.9.5",
    "@adonisjs/attachment-lite": "^1.0.8",
    "@adonisjs/auth": "^8.2.3",
    "@adonisjs/bouncer": "^2.3.0",
    "@adonisjs/core": "^5.9.0",
    "@adonisjs/lucid": "^18.4.2",
    "@adonisjs/mail": "^8.2.1",
    "@adonisjs/repl": "^3.1.11",
    "@adonisjs/view": "^6.2.0",
    "@rlanz/bull-queue": "^1.0.6",
    "adonis-responsive-attachment": "^1.5.10",
    "bignumber.js": "^9.1.2",
    "knex-postgis": "^0.14.3",
    "luxon": "^3.4.3",
    "pg": "^8.11.3",
    "prettier-eslint": "^16.1.2",
    "proxy-addr": "^2.0.7",
    "qs": "^6.11.2",
    "razorpay": "^2.9.2",
    "reflect-metadata": "^0.1.13",
    "slugify": "^1.6.6",
    "socket.io": "^4.7.2",
    "source-map-support": "^0.5.21",
    "uni-flatten": "^1.5.5",
    "uuid": "^9.0.1",
    "xlsx": "^0.18.5"
  }
}
