<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Login</title>
  @entryPointStyles('app')
  @entryPointScripts('app')
</head>

<body>
  <div class="relative flex flex-col justify-center h-screen overflow-hidden bg-base-200"
    style="background-image: url(/images/login-bg.png);background-repeat: no-repeat;background-position: center">

    <div class="w-full px-8 py-12 m-auto bg-base-100 rounded-md shadow-xl text-base  lg:max-w-lg">
      <div class="space-y-3">
        @!component('components/brand')
        <p class="text-center text-xl font-bold">Welcome Back</p>
        <p class="text-center  ">Enter you email and password to sign in </p>
      </div>
      @if(flashMessages.has('message'))
      <p class="my-2 text-red-500">{{flashMessages.get('message')}}</p>
      @endif
      <form class="space-y-4" action="{{ route('admin.login.post') }}" method="post">
        {{ csrfField() }}
        <div>
          <label class="label">
            <span class="text-base label-text">Email</span>
          </label>
          <input type="text" placeholder="Email Address" class="w-full input input-bordered"
            value="{{flashMessages.get('email') || ''}}" name="email" />
        </div>
        <div>
          <label class="label">
            <span class="text-base label-text">Password</span>
          </label>
          <input type="password" placeholder="Enter Password" class="w-full input input-bordered" name='password' />
        </div>
        <div class="flex justify-between">
          <div class="form-control">
            <label class="label cursor-pointer gap-2">
              <input type="checkbox" class="toggle toggle-xs" name="rememberMe" />
              <span class="label-text">Remember me</span>
            </label>
          </div>
          <a href="" class="btn btn-link text-black no-underline normal-case  btn-sm ">Forget Password?</a>
        </div>
        <div>
          <button class="btn btn-primary w-full">Login</button>
        </div>
      </form>
    </div>
  </div>
</body>

</html>
